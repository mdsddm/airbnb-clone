<% layout("/layouts/boilerplate") %>

  <body>
    <div class="row">
      <div class="col-8 offset-2">
        <h2 style="margin-top: 1rem; margin-bottom: 1rem">Edit your listing</h2>

        <form method="POST" action="/listings/<%= listing.id%>?_method=PUT" novalidate class="needs-validation"
          enctype="multipart/form-data">
          <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input type="text" name="listing[title]" placeholder="enter title" class="form-control"
              value="<%=listing.title %>" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please choose a title</div>
          </div>
          <div class="mb-3">
            <label for="description" class="form-lable">Description</label>
            <textarea name="listing[description]" placeholder="enter description" class="form-control" required>
<%=listing.description %> </textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please choose a description</div>
          </div>
          <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <select name="listing[category]" class="form-select" aria-label="Category select" required>
              <option disabled value="" <%=!listing.category ? "selected" : "" %>>Select category</option>
              <option value="trending" <%=listing.category==="trending" ? "selected" : "" %>>Trending</option>
              <option value="rooms" <%=listing.category==="rooms" ? "selected" : "" %>>Rooms</option>
              <option value="iconic_cities" <%=listing.category==="iconic_cities" ? "selected" : "" %>>Iconic Cities
              </option>
              <option value="mountains" <%=listing.category==="mountains" ? "selected" : "" %>>Mountains</option>
              <option value="castles" <%=listing.category==="castles" ? "selected" : "" %>>Castles</option>
              <option value="arctic" <%=listing.category==="arctic" ? "selected" : "" %>>Arctic</option>
              <option value="camping" <%=listing.category==="camping" ? "selected" : "" %>>Camping</option>
              <option value="farms" <%=listing.category==="farms" ? "selected" : "" %>>Farms</option>
              <option value="domes" <%=listing.category==="domes" ? "selected" : "" %>>Domes</option>
              <option value="boats" <%=listing.category==="boats" ? "selected" : "" %>>Boats</option>
            </select>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please choose a category</div>
          </div>
          <div class="mb-3">
            Original Listing Image <br />
            <img style="height: 12rem; width: 18rem" src="<%= originalImageUrl %>" />
          </div>
          <div class="mb-3">
            <label for="image" class="form-lable">Upload New Image</label>
            <input type="file" name="listing[image]" placeholder="enter image file name" class="form-control" />
          </div>
          <div class="row">
            <div class="mb-3 col-md-4">
              <label for="price" class="form-lable">Price</label>
              <input type="number" name="listing[price]" placeholder="enter price" class="form-control"
                value="<%=listing.price %>" required />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Please choose a image url</div>
            </div>

            <div class="mb-3 col-md-8">
              <label for="country" class="form-lable">Country</label>
              <input type="text" name="listing[country]" placeholder="enter country" class="form-control"
                value="<%=listing.country %>" required />
              <div class="valid-feedback">Looks good!</div>
              <div class="invalid-feedback">Country name should be valid</div>
            </div>
          </div>

          <div class="mb-3">
            <label for="location" class="form-lable">Location</label>
            <input type="text" name="listing[location]" placeholder="Like New Dehli , Jaipur, Rajasthan"
              class="form-control" value="<%=listing.location %>" required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please choose a location</div>
          </div>
          <button class="btn btn-dark edit-btn">Edit</button>
          <br /><br />
        </form>
      </div>
    </div>
  </body>