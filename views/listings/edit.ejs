<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h2 style="margin-top: 1rem;margin-bottom: 1rem;">Edit your listing</h2>

                <form method="POST" action="/listings/<%= listing.id%>?_method=PUT">
                    <div class="mb-3">
                        <label for="title" class="form-lable">Title</label>
                        <input type="text" name="listing[title]" placeholder="enter title" class="form-control"
                            value="<%=listing.title %>" />
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-lable">Description</label>
                        <textarea name="listing[description]" placeholder="enter description"
                            class="form-control"><%=listing.description %></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="image-filename" class="form-lable">Image file name</label>
                        <input type="text" name="listing[image][filename]" placeholder="enter image file name"
                            class="form-control" value="<%=listing.image.filename %>" />
                    </div>

                    <div class="mb-3">
                        <label for="image-url" class="form-lable">Image url</label>
                        <input type="text" name="listing[image][url]" placeholder="enter image url" class="form-control"
                            value="<%=listing.image.url %>" />
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-lable">Price</label>
                            <input type="number" name="listing[price]" placeholder="enter price" class="form-control"
                                value="<%=listing.price %>" />
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-lable">Country</label>
                            <input type="text" name="listing[country]" placeholder="enter country" class="form-control"
                                value="<%=listing.country %>" />
                        </div>
                    </div>


                    <div class="mb-3">
                        <label for="location" class="form-lable">Location</label>
                        <input type="text" name="listing[location]" placeholder="Like New Dehli , Jaipur, Rajasthan"
                            class="form-control" value="<%=listing.location %>" />
                    </div>
                    <button class="btn btn-dark edit-btn">Edit</button>
                    <br><br>
                </form>
            </div>
        </div>
    </body>